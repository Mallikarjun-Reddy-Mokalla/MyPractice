<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" android:padding="10dp">
    <solid android:color="@color/text_bg_color"/>
    <corners
        android:radius="15dp"
        />
    <gradient
        android:startColor="@color/text_bg_color"
        android:centerColor="@color/text_bg_color"
        android:endColor="@color/text_bg_color"
        android:angle="270"
        android:type="linear"
        />
    <padding android:left="10dp"
        android:top="0dp"
        android:right="10dp"
        android:bottom="0dp"/>
    <stroke
        android:width="2dp"
        android:color="@color/text_bg_color" />
</shape>