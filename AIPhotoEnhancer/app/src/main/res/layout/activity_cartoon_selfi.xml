<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".Activities.CartoonSelfi">

    <RelativeLayout
        android:id="@+id/app_bar_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="0dp">

        <RelativeLayout
            android:id="@+id/app_bar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/black"
            android:paddingLeft="30dp"
            android:paddingTop="40dp"
            android:paddingRight="30dp"
            android:paddingBottom="40dp">

            <ImageView
                android:id="@+id/cartoon_on_back"
                android:layout_width="32dp"

                android:layout_height="32dp"
                android:src="@drawable/ai_back_arrow"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_bold"
                android:text="Cartoon"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </RelativeLayout>

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_bar" />

        <RelativeLayout
            android:id="@+id/cartoon_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/pro_ad_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:id="@+id/pro_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="18dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_gradient"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ai_pro_crown" />

                            <TextView
                                android:id="@+id/pro_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/custom_thin"
                                android:text="Cartoon"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/custom_thin"
                            android:text="Better Effect &amp; No ads"

                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ads_card_cartoon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pro_card"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="18dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/effect_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/custom_thin"
                                android:text="Cartoon"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/custom_thin"
                            android:text="Watch Ads "

                            android:textColor="@color/light_gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:id="@+id/cartoons_list_lay"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:scrollbarSize="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/cartoon_one"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/cartoon_1" />

                        <ImageView
                            android:id="@+id/cartoon_two"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/cartoon_2" />

                        <ImageView
                            android:id="@+id/cartoon_three"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/cartoon_3" />

                        <ImageView
                            android:id="@+id/cartoon_four"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/cartoon_4" />

                        <ImageView
                            android:id="@+id/cartoon_five"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/cartoon_5" />

                        <ImageView
                            android:id="@+id/cartoon_six"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/cartoon_6" />
                    </LinearLayout>
                </HorizontalScrollView>

                <RelativeLayout
                    android:id="@+id/save_cartoon_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/magic_cartoon_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"

                        android:background="@drawable/magic_gradient"
                        android:orientation="vertical"
                        android:padding="6dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ai_magic_wind" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/save_cartoon_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toRightOf="@+id/magic_cartoon_card"
                        app:cardCornerRadius="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/arial"
                            android:padding="10dp"
                            android:text="@string/save"
                            android:textColor="@color/black"
                            android:textSize="20sp">

                        </TextView>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/magic_save_tools_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone">


                    <ImageView
                        android:id="@+id/cartoon_tab_close"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="8dp"
                        android:src="@drawable/magic_r_tab_close" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbarSize="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/cartoon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:backgroundTint="@color/light_gray"
                                    app:cardCornerRadius="10dp"
                                    app:contentPadding="15dp">

                                    <ImageView

                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/magic_r_cartoon" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/arial"
                                    android:gravity="center"
                                    android:text="@string/cartoon"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/remove_bg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:backgroundTint="@color/light_gray"
                                    app:cardCornerRadius="10dp"
                                    app:contentPadding="15dp">

                                    <ImageView

                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/magic_r_remove_bg" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/arial"
                                    android:gravity="center"
                                    android:text="@string/remove_bg"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/descratch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:backgroundTint="@color/light_gray"
                                    app:cardCornerRadius="10dp"
                                    app:contentPadding="15dp">

                                    <ImageView

                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/magic_r_erase_lines" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/arial"
                                    android:gravity="center"
                                    android:text="@string/descratch"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lens_blur"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:backgroundTint="@color/light_gray"
                                    app:cardCornerRadius="10dp"
                                    app:contentPadding="15dp">

                                    <ImageView

                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/magic_r_lens_blur" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/arial"
                                    android:gravity="center"
                                    android:text="@string/lens_blur"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/colorize"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:backgroundTint="@color/light_gray"
                                    app:cardCornerRadius="10dp"
                                    app:contentPadding="15dp">

                                    <ImageView

                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/magic_r_palette" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/arial"
                                    android:gravity="center"
                                    android:text="@string/colorize"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/dehaze"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:backgroundTint="@color/light_gray"
                                    app:cardCornerRadius="10dp"
                                    app:contentPadding="15dp">

                                    <ImageView

                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/magic_r_cloud" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/arial"
                                    android:gravity="center"
                                    android:text="@string/dehaze"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/enhance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:backgroundTint="@color/light_gray"
                                    app:cardCornerRadius="10dp"
                                    app:contentPadding="15dp">

                                    <ImageView

                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/magic_r_stars_effects" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/arial"
                                    android:gravity="center"
                                    android:text="@string/enhance"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/erase"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:backgroundTint="@color/light_gray"
                                    app:cardCornerRadius="10dp"
                                    app:contentPadding="15dp">

                                    <ImageView

                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/magic_r_paint_brush" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/arial"
                                    android:gravity="center"
                                    android:text="Erase"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/brighten"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:backgroundTint="@color/light_gray"
                                    app:cardCornerRadius="10dp"
                                    app:contentPadding="15dp">

                                    <ImageView

                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/magic_r_bright" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/arial"
                                    android:gravity="center"
                                    android:text="@string/brighten"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </LinearLayout>


                    </HorizontalScrollView>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>